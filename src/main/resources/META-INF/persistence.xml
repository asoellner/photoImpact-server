<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="photoPersistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.soellner.photoImpactServer.data.Photo</class>

        <properties>
            <!-- there is no need for JNDI customization for a direct connection -->
            <!-- property name="eclipselink.session.customizer" value="org.eclipse.persistence.example.unified.integration.JPAEclipseLinkSessionCustomizer"/-->
            <property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.DerbyPlatform"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:C:/Users/asoel/derby/photoImpact;create=false"/>
            <property name="javax.persistence.jdbc.user" value="alex"/>
            <property name="javax.persistence.jdbc.password" value="alex"/>

            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.level.sql" value="INFO"/>

            <!-- Turn off persistence unit cache (L2) caching. We want to edit the
             database via anotehr JDBC connection. -->
            <property name="eclipselink.cache.shared.default" value="false"/>

            <!-- uncomment the following once - if you wish to have your database tables created by EclipseLink -->

            <!--property name="eclipselink.ddl-generation" value="drop-and-create-tables"-->
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>


            <!--property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.jdbc"/>
            <property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.jdbc"/-->
        </properties>
    </persistence-unit>



</persistence>